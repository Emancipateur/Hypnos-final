 </head>
 <body>

{# Button to Top #}
<button onclick="topFunction()" id="myBtn" title="Go to top">Up</button>
<script>
function topFunction() {
window.scrollTo({
  top: 0,
  behavior: 'smooth'
});
}</script>




 <nav class="navbar">
 <!-- LOGO -->
 <div class="logo"> <a href="{{ path('app_etablissements_index') }}"> <img src="{{ asset('./h.png') }}" alt="" width="10%"  >
 <span>ypnos</span></a>


 </div>
 <!-- NAVIGATION MENU -->
 <ul class="nav-links">
 <!-- USING CHECKBOX HACK -->
 <input type="checkbox" id="checkbox_toggle" />
 <label for="checkbox_toggle" class="hamburger">&#9776;</label>
 <!-- NAVIGATION MENUS -->
 <div class="menu">
 <li>    <a href="{{ path('app_etablissements_index') }}">Home</a></li>
  {% if is_granted('IS_AUTHENTICATED_FULLY') %}
{% if (app.user.roles[0] == 'ROLE_ADMIN') %}
 <li><a href="{{ path('app_admin') }}">Admin</a></li>
  {% endif %}
 {% endif %}
 {% if is_granted('IS_AUTHENTICATED_FULLY') %}
{% if (app.user.roles[0] == 'ROLE_GERANT') %}
 <li><a href="{{ path('app_etablissements_a') }}">Gérant</a></li>
  {% endif %}
 {% endif %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
{% if (app.user.roles[0] == 'ROLE_CLIENT') %}
 <li><a href="{{ path('app_clients_show', {'id' : app.user.id }) }}">Client</a></li>
 {% endif %}
 {% endif %}
 <li class="services">
     <a href="#">Etablissements</a>
 <!-- DROPDOWN MENU -->
 <ul class="dropdown">
 <li><a href="{{ path('app_etablissements_show', {'id': 1}) }}">L'exquis</a></li>
 <li><a href="{{ path('app_etablissements_show', {'id': 2}) }}">L'irrépressible</a></li>
 <li><a href="{{ path('app_etablissements_show', {'id': 3}) }}">L'orgasmique</a></li>
 <li><a href="{{ path('app_etablissements_show', {'id': 5}) }}">L'hibernation</a></li>
 <li><a href="{{ path('app_etablissements_show', {'id': 6}) }}">L'authentique</a></li>
 <li><a href="{{ path('app_etablissements_show', {'id': 7}) }}">L'irrésistible</a></li>
 <li><a href="{{ path('app_etablissements_show', {'id': 8}) }}">L'incroyable</a></li>
 </ul>
 </li>
 <li><a href="{{ path('contact') }}">Contact</a></li>
 {% if is_granted('IS_AUTHENTICATED_FULLY') %}
 <li><a href="{{ path('app_logout') }}">Deconnexion</a></li>
 {% else %}
	 

 <li><a href="{{ path('login') }}">Connexion</a></li>{% endif %}
 </div>
 </ul>
 </nav>
 </body>
</html>

